<h1>Editing Book</h1>



<% if @book.errors.any? %>
        <p><% @book.errors.count %>件のエラーが発生しました</p>
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
<% end %>

<%= form_for(@book) do |f|%>



	<h4>Title</h4>
	   <%= f.text_field :title %>
	<h4>Body</h4>
	   <%= f.text_area :body %>
	<div class="actions">
	  <%= f.submit 'Update Book' %>
    </div>
<% end %>

<%= link_to "show", book_path(@book.id) %>
<%= link_to "edit", edit_book_path(@book.id) %>

